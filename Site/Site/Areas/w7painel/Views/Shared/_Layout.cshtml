<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "w7painel" }, null)</li>
            <li>@Html.ActionLink("Noticias", "Index", "Noticia", new { area = "w7painel" }, null)</li>
            @if (User.IsInRole("video_visualizar"))
            {
                <li>@Html.ActionLink("Vídeos", "Index", "Video", new { area = "w7painel" }, null)</li>
            }
            <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
            <li>@Html.ActionLink("Grupos", "Index", "Grupo")</li>
            <li>@Html.ActionLink("Sair", "Sair", "Usuario", new { area = "w7painel" }, null)</li>
        </ul>
    }
    @RenderBody()
</body>
</html>
